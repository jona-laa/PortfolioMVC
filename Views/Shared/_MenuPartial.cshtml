@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul id="menu-main-menu" class="menu">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a 
                asp-controller="Home" 
                asp-action="Index"
                class="menu-link">
                Preview
            </a>
        </li>
        <li>
            <a 
                asp-controller="About" 
                asp-action="Index"
                class="menu-link">
                About
            </a>
        </li>
        <li>
            <a 
                asp-controller="Skill" 
                asp-action="Index"
                class="menu-link">
                Skills
            </a>
        </li>
        <li>
            <a 
                asp-controller="Work" 
                asp-action="Index"
                class="menu-link">
                Work
            </a>
        </li>
        <li>
            <a 
                asp-controller="Course" 
                asp-action="Index"
                class="menu-link">
                Course
            </a>
        </li>
        <li>
            <a 
                asp-controller="Project" 
                asp-action="Index"
                class="menu-link">
                Portfolio
            </a>
        </li>
        <li>
            <a 
                asp-controller="Blog" 
                asp-action="Index"
                class="menu-link">
                Blog
            </a>
        </li>
    
        <li>
            <a 
                class="menu-link" 
                asp-area="Identity" 
                asp-page="/Account/Manage/Index" 
                title="Manage">
                Profile
            </a>
        </li>
        <li>
            <a
                class="menu-link"
                id="logout-btn"
                asp-area="Identity"
                asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"

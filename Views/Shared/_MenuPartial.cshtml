        <li>
            <a 
                asp-controller="Blog" 
                asp-action="Index"
                class="menu-link">
                Blog
            </a>
        </li>
        <li>
            <a 
                class="menu-link" 
                asp-area="Identity" 
                asp-page="/Account/Register">
                Register
            </a>
        </li>
        <li>
            <a 
                class="menu-link" 
                asp-area="Identity" 
                asp-page="/Account/Login">
                Login
            </a>
        </li>
    }
</ul>

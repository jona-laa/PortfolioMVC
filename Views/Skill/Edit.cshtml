@model PortfolioMVC.Models.Skill

@{
    ViewData["Title"] = "Skill - Edit";
}

<main>
    <section id="edit" class="section-padding">
        <h2>Edit Skill</h2>
        <div class="divider"></div>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div>
                <input asp-for="SkillName" />
                <label asp-for="SkillName"></label>
                <span asp-validation-for="SkillName" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Icon" />
                <label asp-for="Icon"></label>
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form_buttons">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div class="go-back">
            <a asp-action="Index">Back to List</a>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


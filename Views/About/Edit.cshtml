@model PortfolioMVC.Models.About

@{
    ViewData["Title"] = "Edit";
}

<main>
    <section id="edit" class="section-padding">
        <h2>Edit About</h2>
        <div class="divider"></div>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div>
                <input asp-for="Title" />
                <label asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ImageName"></label>
                <input asp-for="ImageName" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="textarea">
                <label asp-for="Content"></label>
                <textarea asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form_checkbox">
                <input class="form-check-input" asp-for="IsPublished" />
                <label asp-for="IsPublished" class="form-check-label"></label>
            </div>
            <div class="form_buttons">
                <input type="submit" value="Save" id="submit" class="btn">
            </div>
        </form>
        <div class="go-back">
            <a asp-action="Index">Back to List</a>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<partial name="_AdminScripts" />

@model PortfolioMVC.Models.BlogPost
@inject PortfolioMVC.Models.DateFormat Format

@{
    ViewData["Title"] = "Blog - Delete";
}

<main>
    <section id="edit-items" class="bg-light section-padding">
        <h2>Delete Article</h2>
        <div class="divider"></div>
        <div id="edit-items_container" class="row">
            <partial name="_Post" />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
        <div class="go-back">
            <a asp-action="Admin">Back to List</a>
        </div>
    </section>
</main>

<partial name="_AdminScripts" />

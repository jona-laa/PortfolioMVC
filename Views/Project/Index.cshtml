@model IEnumerable<PortfolioMVC.Models.Project>

@{
    ViewData["Title"] = "Projects - Admin";
}

@section heroContent {
    <div class="hero-content">
      <h1 class="title">Projects</h1>
      <a href="#edit-items" class="arrow-link" aria-label="Scroll down to main content"><i class="fas fa-chevron-down fa-3x"></i></a>
    </div>
}

<main>
    <section id="edit-items" class="bg-light section-padding">
        <h2>Projects</h2>
        <div class="divider"></div>
        <p class="create-new">
            <a asp-action="Create">Create New</a>
        </p>
        <div id="edit-items_container" class="row flex-row trio">
            @foreach (var item in Model) 
            {
            <div class="portfolio-item">
                <img src="/images/uploads/@(item.ImageName)" asp-append-version="true" alt="@item.ImageDescription">
                <h3>@item.Title</h3>
                <a href="@item.Url" target="_blank">@item.Url</a>
                <p>@item.Description</p>

                <div class="edit-items_controls">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="edit-control">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="edit-control">Delete</a>
                </div>
            </div>
            }
        </div>
    </section>
</main>

<partial name="_AdminScripts" />

        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
        Profile
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
        Email
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
        Password
        </a>
    </li>

    <li class="nav-item">
        <a 
            class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="roles" 
            asp-controller="Role" 
            asp-action="Index">
            Roles
        </a>
    </li>

    <li class="nav-item">
        <a 
            class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" 
